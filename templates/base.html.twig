<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description" content="{{ setting.find(1).description }}">
		<link
		rel="shortcut icon" href="{{ asset('uploads/' ~ setting.find(1).image) | imagine_filter('favicon') }}" type="image/png">

		{# Open Graph #}
		<meta property="og:image" content="{{ setting.find(1).image }}">
		<meta property="og:description" content="{{ setting.find(1).description }}">
		<meta property="og:title" content="{{ setting.find(1).title }}">

		<title>
			{% block title %}Accueil
			{% endblock %}
			-
			{{ setting.find(1).title }}</title>

