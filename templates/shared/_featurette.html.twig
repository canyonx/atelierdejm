<hr class="featurette-divider">
<div
	class="row d-flex align-items-center">
	{# Image #}
	<div class="col-12 col-md-5 {% if ((key + 1) / 2) matches '/^\\d+$/' %} order-md-2{% endif %} mb-2">
		<img class="img-fluid mx-auto" src="{{ asset('uploads/featurette/' ~ featurette.illustration) | imagine_filter('product_image') }}" alt="{{ featurette.title }}" width="500" height="500">
	</div>

	{# Description #}
	<div class="col-12 col-md-6 {% if ((key + 1) / 2) matches '/^\\d+$/' %} order-md-1{% endif %}">
		<h2 class="featurette-heading mb-2">{{ featurette.title }}</h2>
		<p class="mb-auto">
			{{ featurette.description | raw }}
		</p>
	</div>
</div>
